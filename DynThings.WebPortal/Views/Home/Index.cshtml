            url: getRootURL() + '/Connectivity/Rpt_LastHourConnectionsPerMinutes',
            type: "GET",
        })
            .success(function (partialViewResult) {
                $("#EndPointChartDiv").html(partialViewResult);
            });
        return false;
    }

