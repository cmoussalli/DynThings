@model DynThings.Data.Models.Location

@{
    ViewBag.Title = "Details";
}

<!--Page Title-->
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<div id="page-title">
    <div class="row">
        <div class="col-lg-9">
            <h1 class="page-header text-overflow">Location: @Model.Title</h1>
            <h5>Manage the locations.</h5>
        </div>

        <div class="col-lg-3">
            <div class="pull-right">
                <br />
                <a href="~/Locations"> < Back to Locations List</a>
            </div>
        </div>
    </div>
</div>
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<!--End page title-->

<div id="page-content">
    <div class="fixed-fluid">
        <div class="fixed-sm-200 fixed-lg-250 pull-sm-left">
            <div class="">
                <div class="text-center bg-info">
                    <img src="~/Imgs/Locations/Default.jpg" style="height:100%;width:100%" />
                    <ul class="list-unstyled text-center pad-top mar-no row">
                        <li class="col-xs-12">
                            <span class="text-lg ">@Model.Title</span>
                            <br /><br />

                        </li>
                        @*<li class="col-xs-4">
                                <span class="text-lg text-semibold">23K</span>
                                <p class="text-sm mar-no">Followers</p>
                            </li>
                            <li class="col-xs-4">
                                <span class="text-lg text-semibold">278</span>
                                <p class="text-sm mar-no">Post</p>
                            </li>*@
                    </ul>
                </div>
                <div class="list-group bg-trans pad-btm">
                    <a class="list-group-item" onclick="LoadPart_LocationMainDiv();" style="cursor: pointer;">Main</a>
                    <a class="list-group-item" onclick="LoadPart_LocationMapDiv();" style="cursor: pointer;">Geo Location</a>
                    <a class="list-group-item" onclick="LoadPart_LocationDevicesContainerDiv();" style="cursor: pointer;">Devices</a>
                    <a class="list-group-item" onclick="LoadPart_LocationThingsContainerDiv();" style="cursor: pointer;">Things</a>
                    <a class="list-group-item" onclick="LoadPart_LocationDelete();" data-toggle="modal" data-target="#mdl" style="cursor: pointer;">Delete</a>
                </div>
            </div>
        </div>

        <div class="fluid">
            <div class="fixed-fluid">
                <div id="divPageDetails">

                </div>
            </div>
        </div>
    </div>

</div>


@section scriptfiles{
    <script  src='https://www.bing.com/api/maps/mapcontrol?callback=GetMap'></script>
    <script src="~/Assets/Scripts/DynScripts/Locations.js"></script>
    <script src="~/Assets/Scripts/DynScripts/Devices.js"></script>
    <script src="~/Assets/Scripts/DynScripts/Things.js"></script>
}

@section scripts{
    <script>
        $(document).ready(function () {
            selectedLocation = '@Model.ID'
            LoadPart_LocationMainDiv();
        });
    </script>
}
