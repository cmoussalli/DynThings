@model IPagedList<DynThings.Data.Models.AppEndpointType>

<table class="table striped hovered border bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Code</th>
            <th>Measurement Unit</th>
            <th>Category</th>
            <th>GUID</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Measurement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndPointTypeCategory.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GUID)
            </td>
            <td>
                <button class="btn btn-warning" onclick="LoadPart_DialogAppEndpointTypeEdit(@item.ID);" data-toggle="modal" data-target="#mdl">Edit</button>
                <button class="btn btn-danger" onclick="LoadPart_DialogAppEndpointTypeDelete(@item.ID);" data-toggle="modal" data-target="#mdl">Delete</button>
            </td>
        </tr>
        }
    </tbody>
</table>

@if (Model.PageCount > 1)
{
    <div id="AppEndpointTypesListPager">
        <input id="AppEndpointTypeCurrentPage" value="@Model.PageNumber.ToString()" hidden />
        @Html.PagedListPager(Model, page => Url.Action("EndpointTypesByAppIDListPV", "Apps", new { page }) + "&appID=" + ViewBag.appID + "&searchFor=" + ViewBag.searchFor)
    </div>
}

