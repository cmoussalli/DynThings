@model PagedList.IPagedList<DynThings.Data.Models.App>


@foreach (var item in Model)
{
    <div class="row">
        <a href="~/Apps/Details?ID=@item.ID">

            <div class="panel panel-bordered-primary">
                <div class="panel-body">
                    <table>
                        <tr>
                            <td>
                                <img src="~/Imgs/Apps/0.jpg" style="height:100%;width:100%" />
                            </td>
                            <td width="15"></td>
                            <td>
                                <h3>@item.Title</h3>
                                <p>@item.Description</p>
                                <br />
                                <p>Version: @item.Version </p>
                                <p>by @item.DevelopedByName</p>
                                @if (item.IsStoreApp)
                                {
                                    <p><span class="label label-success">Store App</span></p>
                                }
                                else
                                {
                                    <p><span class="label label-info">Local App</span></p>

                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </a>
    </div>
}




