@model DynThings.Data.Models.App

<div class="panel">
    <div class="panel-heading">
        <div class="panel-control">
            <button class="btn btn-default" onclick="LoadPart_AppDetailsDiv();">
                <i class="demo-psi-repeat-2 icon-fw"></i> Refresh
            </button>
        </div>
        <h3 class="panel-title">Main Info</h3>
    </div>

    <div class="panel-body">
        <div class="pad-btm form-inline">
            <div class="row">
                <div class="col-sm-6 table-toolbar-left">
                    @if (!Model.IsStoreApp)
                    {
                        <button class="btn btn-warning" onclick="LoadAppEditor(@Model.ID)" data-toggle="modal" data-target="#mdl">Edit</button>
                    }
                </div>

            </div>
        </div>


        <strong>Title</strong><br>
        @Model.Title<br><br>
        <strong>Description</strong><br>
        @Model.Description<br><br>
        <strong>Status</strong><br>
        @Model.AppStatuss.Title<br><br>

        <strong>Version</strong><br>
        @Model.Version<br><br>

    </div>
</div>
