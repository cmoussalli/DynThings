@{
    ViewBag.Title = "Local Apps";
}
<!--Page Title-->
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<div id="page-title">
    <div class="row">
        <div class="col-lg-9">
            <h1 class="page-header text-overflow">Customization Apps</h1>
            <h5>Manage the platform customizations using apps, and publish your app to DynThings store.</h5>
        </div>

        <div class="col-lg-3">
            <div class="pull-right">
                @*<br />
                    <a href="~/Apps"> < Back to Apps List</a>*@
            </div>
        </div>
    </div>
</div>
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<!--End page title-->


<div id="page-content">
    <div class="row">
        <div class="col-xs-3 col-sm-2 col-md-6">
            <button type="button" class="btn btn-purple" onclick="LoadPart_DialogAppAdd()" data-toggle="modal" data-target="#mdl">Create Local App</button>
            <a href="~/storeapps">
                <button type="button" class="btn btn-success" >Get App from DynThings App Store</button>
            </a>
        </div>
        <div class="col-md-6">
            <div class="input-group">
                <input type="search" id="txtAppSearch" class="form-control" onkeydown="if (event.keyCode == 13) { LoadPart_AppListDiv(); return false; }" />
                <div class="input-group-btn">
                    <button type="button" class="btn btn-primary" onclick="LoadPart_AppListDiv()">Search</button>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />

    <div id="divAppsList"></div>

    <div hidden="hidden">
        <button onclick="test();">Test</button>
    </div>

</div>


@section scriptfiles{
    <script src="~/Assets/Scripts/DynScripts/Apps.js"></script>

}
@section scripts{
    <script>
        $(document).ready(function () {
            LoadPart_AppListDiv();
            AttachEventAppsListPager();
        });

    </script>
}

<script>
    function test() {
        $.notify({
            // options
            message: 'Hello World'
        }, {
                // settings
                type: 'danger'
            });

    };
</script>