    <!-- Global site tag (gtag.js) - Google Analytics -->
    @if (DynThings.Core.Config.GoogleAnalytics != null && DynThings.Core.Config.GoogleAnalytics != "")
    {
        <script async src="https://www.googletagmanager.com/gtag/js?id=@DynThings.Core.Config.GoogleAnalytics"></script>
        <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', '@DynThings.Core.Config.GoogleAnalytics');
        gtag('config', 'UA-72665311-3');
        </script>
    }

